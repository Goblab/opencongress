<style>
    #content .simple_form {margin-left: 40px; margin-top: 10px;}
    .simple_form .button.large.blue {margin-left: 104px;}
    .simple_form textarea, .simple_form input {width: 300px;}
    .simple_form textarea.field {height: 150px;}
    .simple_form .control-label.required:after {padding-left: 4px;}
    .simple_form abbr[title=required] {display: none;}
</style>
<%= simple_form_for :contact, :url => contact_index_path, :method => :post,
                    :defaults => { :input_html => { :class => 'field' }} do |f| %>
  <%= f.input :name, :input_html => { :value => logged_in? ? current_user.full_name : "" } %>
  <%= f.input :email, :input_html => { :value => logged_in? ? current_user.email : "" } %>
  <%= f.input :message, :as => :text %>
  <%= f.button :submit, :value => "Get in touch", :class => "button large blue" %>
<% end %>